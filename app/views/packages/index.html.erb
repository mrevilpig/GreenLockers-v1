
<h4>Packages</h4>

<%= link_to content_tag( :span, "", :class=>"glyphicon glyphicon-plus") + ' New Package', '', "data-toggle"=>"modal", "data-target"=>'#myModal-new-package'  %>


<table class='table table-hover'>
  <thead><tr><th colspan='8'><h5>Packages to Be Processed (<%= @packages.select{|p| p.status=='0' or p.status=='5' }.size %>)</h5></th></tr></thead>
  <% @selected_packages = @packages.select{|p| p.status=='0' or p.status=='5' } %>
  <%= render 'tablecontent' %>
  
  <thead><tr><th colspan='8'><h5>Packages Being Processed (<%= @selected_packages.size %>)</h5></th></tr></thead>
  <% @selected_packages = @packages.select{|p| p.status=='1' or p.status=='3' or p.status=='6' } %>
  <%= render 'tablecontent' %>

  <thead><tr><th colspan='8'><h5>Packages Already Processed (<%= @packages.select{|p| p.status=='2' or p.status=='7' }.size %>)</h5></th></tr></thead>
  <% @selected_packages = @packages.select{|p| p.status=='2' or p.status=='7' } %>
  <%= render 'tablecontent' %>
</table>

<br>

    <div class="modal fade" id="myModal-new-package" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	    	<%= render 'formnew' %>
	    </div>
	  </div>
	</div>

    <div class="modal fade" id="myModal-assign" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <%= render 'formassign' %>
	    </div>
	  </div>
	</div>