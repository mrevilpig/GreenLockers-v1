<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='row'>
  <div class='col-md-4'>
	  <div class="field">
	    <%= f.label :first_name %><br>
	    <%= f.text_field :first_name, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :last_name %><br>
	    <%= f.text_field :last_name, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :middle_name %><br>
	    <%= f.text_field :middle_name, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :home_phone %><br>
	    <%= f.text_field :home_phone, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :mobile_phone %><br>
	    <%= f.text_field :mobile_phone, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :email %><br>
	    <%= f.text_field :email, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :st_address %><br>
	    <%= f.text_field :st_address, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :apt_address %><br>
	    <%= f.text_field :apt_address , {:class=>'form-control'}%>
	  </div>
	  <div class="field">
	    <%= f.label :city %><br>
	    <%= f.text_field :city , {:class=>'form-control'}%>
	  </div>
	  <div class="field">
	    <%= f.label :state_id %><br>
	    <%= f.number_field :state_id , {:class=>'form-control'}%>
	  </div>
	  <div class="field">
	    <%= f.label :zip %><br>
	    <%= f.text_field :zip , {:class=>'form-control'}%>
	  </div>
	  <div class="field">
	    <%= f.label :preferred_branch_id %><br>
	    <%= f.collection_select :preferred_branch_id, Branch.order(:state_id,:city),:id, :full_name ,{:include_blank => 'Select Branch'}, {:class=>'form-control'} %>
	  </div>
	  <div class="field">
	    <%= f.label :user_name %><br>
	    <%= f.text_field :user_name, {:class=>'form-control'} %>
	  </div>
  </div>
</div>
<div class='row'>
	<div class='col-md-12'>
  	<%= link_to 'Back', users_path, :class=>"btn btn-default" %>
    <%= f.submit :class=>"btn btn-primary"  %>
    </div>
</div>
<% end %>
